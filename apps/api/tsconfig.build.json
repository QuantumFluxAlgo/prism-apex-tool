{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "include": ["src/index.ts"],
  "exclude": [
    "src/__tests__/**",
    "src/routes/**",
    "src/jobs/**",
    "src/store.ts"
  ]
}
