{
  "name": "prism-apex-tool",
  "version": "0.1.0",
  "private": true,
  "description": "Prism Apex Tool monorepo",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit -p tsconfig.base.json || true",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsc -p tsconfig.base.json",
    "prepare": "husky install",
    "clean": "rimraf node_modules dist coverage",
    "compose:up": "docker compose up -d --build",
    "compose:down": "docker compose down -v",
    "e2e": "pnpm --filter @prism-apex/e2e test",
    "bootstrap": "corepack enable && pnpm install",
    "validate": "pnpm -w run typecheck && pnpm -w run lint",
    "versions": "node -v && pnpm -v",
    "scan:dead": "npx -y depcheck --json > reports/depcheck.json || true",
    "scan:strays": "git ls-files | egrep -i '\\.(bak|backup|old)$|(^|/)=?[0-9]{2,3}%$|(^|/)server\\.backup\\.|(^|/)\\]$' > reports/strays.txt || true"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "packageManager": "pnpm@9.15.9",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "30.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.10.0",
    "@eslint/js": "^9.10.0",
    "typescript-eslint": "^8.7.0",
    "globals": "^15.9.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.10",
    "jsdom": "26.1.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^1.0.4"
  }
}
